{
    "apiVersion": "apps/v1",
    "kind": "StatefulSet",
    "metadata": {
        "namespace": "$K8NAMESPACE",
        "name": "minio",
        "labels": {
            "app": "minio"
        }
    },
    "spec": {
        "serviceName": "minio",
        "selector": {
            "matchLabels": {
                "app": "minio"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "minio"
                }
            },
            "spec": {
                "nodeSelector": {
                    "minio": "true"
                },
                "volumes": [
                    {
                        "name": "storage",
                        "hostPath": {
                            "path": "/"
                        }
                    }
                ],
                "containers": [
                    {
                        "name": "minio",
                        "env": [
                            {
                                "name": "MINIO_ACCESS_KEY",
                                "value": "$MINIO_ACCESS_KEY"
                            },
                            {
                                "name": "MINIO_SECRET_KEY",
                                "value": "$MINIO_SECRET_KEY"
                            }
                        ],
                        "image": "minio/minio",
                        "args": [
                        ],
                        "ports": [
                            {
                                "containerPort": 9000
                            }
                        ],
                        "volumeMounts": [
                            {
                                "name": "storage",
                                "mountPath": "/data/minio/",
                                "subPath": "minio"
                            }
                        ],
                        "readinessProbe": {
                            "httpGet": {
                                "path": "/minio/health/ready",
                                "port": 9000
                            },
                            "initialDelaySeconds": 120,
                            "periodSeconds": 20
                        },
                        "livenessProbe": {
                            "httpGet": {
                                "path": "/minio/health/live",
                                "port": 9000
                            },
                            "initialDelaySeconds": 120,
                            "periodSeconds": 20
                        }
                    }
                ]
            }
        }
    }
}