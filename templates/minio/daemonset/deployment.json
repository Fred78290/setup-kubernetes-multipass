{
  "apiVersion": "apps/v1",
  "kind": "DaemonSet",
  "metadata": {
    "namespace": "$K8NAMESPACE",
    "name": "minio",
    "labels": {
      "app": "minio"
    }
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "minio"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "minio"
        }
      },
      "spec": {
        "nodeSelector": {
          "minio": "true"
        },
        "volumes": [
          {
            "name": "storage",
            "hostPath": {
              "path": "/"
            }
          }
        ],
        "containers": [
          {
            "name": "minio",
            "env": [
              {
                "name": "MINIO_ACCESS_KEY",
                "value": "$MINIO_ACCESS_KEY"
              },
              {
                "name": "MINIO_SECRET_KEY",
                "value": "$MINIO_SECRET_KEY"
              }
            ],
            "image": "minio/minio",
            "args": [
              "server",
              "http://10.254.253.100:9000/data/minio",
              "http://10.254.253.101:9000/data/minio",
              "http://10.254.253.102:9000/data/minio",
              "http://10.254.253.103:9000/data/minio"
            ],
            "ports": [
              {
                "containerPort": 9000
              }
            ],
            "volumeMounts": [
              {
                "name": "storage",
                "mountPath": "/data/minio/",
                "subPath": "minio"
              }
            ]
          }
        ]
      }
    }
  }
}
