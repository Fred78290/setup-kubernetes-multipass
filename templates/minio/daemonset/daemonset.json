{
    "apiVersion": "apps/v1",
    "kind": "DaemonSet",
    "metadata": {
        "namespace": "$K8NAMESPACE",
        "name": "minio",
        "labels": {
            "app": "minio"
        }
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "app": "minio"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "minio"
                }
            },
            "spec": {
                "hostNetwork": true,
                "nodeSelector": {
                    "minio": "true"
                },
                "volumes": [
                    {
                        "name": "storage",
                        "hostPath": {
                            "path": "/"
                        }
                    }
                ],
                "containers": [
                    {
                        "name": "minio",
                        "env": [
                            {
                                "name": "MINIO_ACCESS_KEY",
                                "value": "$MINIO_ACCESS_KEY"
                            },
                            {
                                "name": "MINIO_SECRET_KEY",
                                "value": "$MINIO_SECRET_KEY"
                            },
                            {
                                "name": "POD_NAME",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.name"
                                    }
                                }
                            }
                        ],
                        "image": "minio/minio:RELEASE.2019-08-29T00-40-57Z",
                        "args": [
                        ],
                        "ports": [
                            {
                                "containerPort": 9000
                            }
                        ],
                        "volumeMounts": [
                            {
                                "name": "storage",
                                "mountPath": "/data/minio/",
                                "subPath": "minio"
                            }
                        ]
                    }
                ]
            }
        }
    }
}